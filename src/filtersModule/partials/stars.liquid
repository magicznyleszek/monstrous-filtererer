<div i-filter ng-controller="filtersStarsCtrl as stars">
    <label i-filter-label for="filterStars">Minimum stars:</label>

    <select
        i-filter-select
        id="filterStars"
        name="filterStars"
        ng-model="stars.selectedOption"
        ng-options="option.label for option in stars.options"
        ng-change="stars.dispatchValue()"
    ></select>
</div>
