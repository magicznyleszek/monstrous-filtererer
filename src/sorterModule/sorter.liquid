<div i-filters ng-cloak>
    <div i-filter ng-controller="sorterCtrl as sorter">
        <label for="hotelsSorter">Sort by:</label>

        <select
            i-filter-select
            i-filter-boxInput
            id="hotelsSorter"
            name="hotelsSorter"
            ng-model="sorter.selectedOption"
            ng-options="option.label for option in sorter.options"
            ng-change="sorter.dispatchValue()"
        ></select>
    </div>
</div>
